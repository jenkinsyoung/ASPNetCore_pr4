@{
    ViewData["Title"] = "Регистрация";
}
<h1>@ViewData["Title"]</h1>

<p>Страница регистрация</p>
@using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        <div class="form-group">
            <label asp-for="login">Логин</label><br />
            <input type="text" asp-for="login" required />
        </div>
        <div class="form-group">
            <label asp-for="password">Пароль</label><br />
            <input type="password" asp-for="password" required />
        </div>
        <div class="form-group">
            <label asp-for="surname">Фамилия</label><br />
            <input type="text" asp-for="surname" />
        </div>
        <div class="form-group">
            <label asp-for="name">Имя</label><br />
            <input type="text" asp-for="name" required />
        </div>
        <div class="form-group">
            <label asp-for="patronymic">Отчество</label><br />
            <input type="text" asp-for="patronymic" />
        </div>
        <div class="form-group sign-up-button">
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </div>
    }